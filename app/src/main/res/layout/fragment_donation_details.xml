<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.user.DonationDetailsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_margin="16dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/donation1"/>
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:translationZ="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/order_btn"
        android:layout_below="@id/image_container">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/name"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="title"/>

            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/category_text_shape"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="14sp"
                android:textColor="@color/secondary"
                android:textAlignment="center"
                android:text="category"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/donor_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:alpha="0.6"
                android:textAlignment="center"
                android:text="given by : name"/>



            <TextView
                android:id="@+id/description_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:text="@string/hint_details"
                android:textAlignment="textStart"
                android:alpha="0.6"/>
            <TextView
                android:id="@+id/details"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:maxLines="50"
                android:isScrollContainer="true"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:text="bla bla bla"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <Button
        android:translationZ="90dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/order_btn"
        android:text="@string/order_this_donation"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/bg_login"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:drawableEnd="@drawable/ic_forward"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>