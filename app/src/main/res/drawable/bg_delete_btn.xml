<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_selected="false">
        <shape android:shape="rectangle">
            <corners  android:bottomRightRadius="@dimen/donation_corner" android:topLeftRadius="@dimen/donation_corner"/>
            <stroke android:color="@color/status_rejected" android:width="3dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" android:color="@color/white">
        <shape  android:shape="rectangle">
            <corners  android:bottomRightRadius="@dimen/donation_corner" android:topLeftRadius="@dimen/donation_corner"/>
            <stroke android:color="@color/status_rejected" android:width="3dp"/>
            <solid android:color="@color/status_rejected"/>
        </shape>
    </item>
    <item android:state_pressed="false" android:state_selected="true" android:color="@color/white">
        <shape  android:shape="rectangle">
            <corners  android:bottomRightRadius="@dimen/donation_corner" android:topLeftRadius="@dimen/donation_corner"/>
            <stroke android:color="@color/status_rejected" android:width="3dp"/>
            <solid android:color="@color/status_rejected"/>
        </shape>
    </item>

</selector>