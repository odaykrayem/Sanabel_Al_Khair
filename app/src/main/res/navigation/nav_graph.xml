<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/donationsFragment">
    <fragment
        android:id="@+id/donationsFragment"
        android:name="com.example.sanabelalkhayr.fragments.user.DonationsFragment"
        android:label="fragment_donations"
        tools:layout="@layout/fragment_donations" >
        <action
            android:id="@+id/action_donationsFragment_to_donationDetailsFragment"
            app:destination="@id/donationDetailsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popUpTo="@id/donationsFragment" />
    </fragment>

    <fragment
        android:id="@+id/donationDetailsFragment"
        android:name="com.example.sanabelalkhayr.DonationDetailsFragment"
        android:label="fragment_donation_details"
        tools:layout="@layout/fragment_donation_details" />

</navigation>